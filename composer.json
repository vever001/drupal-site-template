{
    "name": "vever001/drupal-site-template",
    "description": "A template for setting up an EC Europa agency site.",
    "type": "project",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.3",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal/core": "^8.9.0",
        "drupal/core-composer-scaffold": "^8.9.0",
        "drush/drush": "^9.7.1 | ^10.0.0",
        "webflo/drupal-finder": "^1.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "drupal/console": "^1.0.2",
        "drupal/core-dev": "^8.9.0",
        "drupal/drupal-extension": "~4.0",
        "ec-europa/toolkit": "^4.1.0",
        "vlucas/phpdotenv": "^4.0"
    },
    "scripts": {
        "post-root-package-install": [
            "DrupalSiteTemplate\\composer\\SetupWizard::setup"
        ],
        "post-create-project-cmd": [
            "@composer dump-autoload",
            "DrupalSiteTemplate\\composer\\CheckSetupWizard::check",
            "DrupalSiteTemplate\\composer\\SetupWizard::cleanup"
        ],
        "post-install-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ]
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/.user.ini": "resources/drupal-scaffold/.user.ini"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ]
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/SetupWizard.php",
            "scripts/composer/CheckSetupWizard.php"
        ],
        "psr-4": {
            "Drupal\\project\\": "./src/"
        }
    },
    "autoload-dev": {
        "files": [
            "load.environment.php"
        ],
        "psr-4": {
            "Drupal\\Tests\\project\\": "./tests/"
        }
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "config": {
        "sort-packages": true
    }
}
